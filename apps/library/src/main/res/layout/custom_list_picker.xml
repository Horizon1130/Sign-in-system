<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/view_title_bar"
        android:padding="10dp">

        <TextView
            android:id="@+id/input_bar_left_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:text="取消"
            android:textColor="@color/white"
            android:textSize="@dimen/font_size"
            android:visibility="visible" />

        <TextView
            android:id="@+id/input_bar_right_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text="确认"
            android:textColor="@color/white"
            android:textSize="@dimen/font_size"
            android:visibility="visible" />

        <ImageView
            android:id="@+id/img_bar_right_button"
            android:layout_width="@dimen/icon_title_back"
            android:layout_height="@dimen/icon_title_back"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:padding="10dp"
            android:scaleType="centerInside"
            android:src="@mipmap/ic_back"
            android:visibility="gone" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="horizontal"
            android:padding="10dp">

            <cn.xiaoph.library.view.ListPickerView
                android:id="@+id/pv_title"
                android:layout_width="0dp"
                android:layout_height="130dp"
                android:layout_weight="3" />
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>